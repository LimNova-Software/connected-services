{
    "name": "limnova-software/connected-services",
    "description": "A unified interface for various API integrations with support for Google, ExactOnline and more",
    "type": "library",
    "license": "proprietary",
    "authors": [
        {
            "name": "LimNova Software",
            "email": "team@limnova.software"
        }
    ],
    "require": {
        "php": "^8.4",
        "guzzlehttp/guzzle": "^7.10",
        "illuminate/support": "^11.46",
        "illuminate/container": "^11.46",
        "illuminate/config": "^11.46"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "phpstan/phpstan": "^1.12",
        "laravel/pint": "^1.15",
        "rector/rector": "^1.0",
        "mockery/mockery": "^1.6"
    },
    "autoload": {
        "psr-4": {
            "LimNova\\ApiManager\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "LimNova\\ApiManager\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "LimNova\\ApiManager\\Providers\\ApiManagerServiceProvider"
            ],
            "aliases": {
                "ApiManager": "LimNova\\ApiManager\\Facades\\ApiManager"
            }
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "phpstan": "phpstan analyse",
        "format": "./scripts/format.sh",
        "format-check": "pint --test",
        "rector": "rector process",
        "quality": "./scripts/test.sh"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
